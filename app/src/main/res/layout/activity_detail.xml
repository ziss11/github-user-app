<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    tools:context=".presentation.ui.DetailActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_detail"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/user_image"
        app:civ_border_color="@color/grey"
        app:civ_border_width="2dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_user_name"
        style="@style/TextAppearance.MdcTypographyStyles.Headline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="@string/user_name"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_user_uname"
        style="@style/TextAppearance.MdcTypographyStyles.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:text="@string/user_username"
        android:textColor="@color/grey" />

    <RelativeLayout
        android:id="@+id/rl_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tv_followers"
            style="@style/TextAppearance.MdcTypographyStyles.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="5dp"
            android:text="@string/user_followers" />

        <TextView
            android:id="@+id/tv_following"
            style="@style/TextAppearance.MdcTypographyStyles.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/tv_followers"
            android:text="@string/user_following" />

        <TextView
            android:id="@+id/tv_repositories"
            style="@style/TextAppearance.MdcTypographyStyles.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/tv_following"
            android:text="@string/user_repo" />

        <ImageView
            android:id="@+id/company_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@+id/tv_following"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/followers_icon"
            android:src="@drawable/company_icon" />

        <TextView
            android:id="@+id/tv_user_company"
            style="@style/TextAppearance.MdcTypographyStyles.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_following"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/company_icon"
            android:text="@string/user_company" />

        <ImageView
            android:id="@+id/location_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@+id/tv_user_company"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/followers_icon"
            android:gravity="center"
            android:src="@drawable/location_icon" />

        <TextView
            android:id="@+id/tv_location"
            style="@style/TextAppearance.MdcTypographyStyles.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_user_company"
            android:layout_toEndOf="@+id/location_icon"
            android:text="@string/user_location"/>

    </RelativeLayout>
</LinearLayout>